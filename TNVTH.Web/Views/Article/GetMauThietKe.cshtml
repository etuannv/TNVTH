@model IEnumerable<TNVTH.Web.Models.T_News>

<h2 class="text-center"><span><a href="/Article/SieuThiWeb" class="nolink">Siêu thị Web</a></span></h2>
<div class="row">


    <div class="portfolio-items isotopeWrapper clearfix" id="3">
        @foreach (var item in Model)
        {
            <article class="col-sm-4 isotopeItem">
                <div class="portfolio-item">
                    <img src="@item.AvataImageUrl" alt="" />
                    <div class="portfolio-desc align-center">
                        <div class="folio-info">
                            <a href="/Article/Detail/@item.ID/@item.Slug" class="nolink">
                                <h5>@item.Title</h5>
                                <i class="fa fa-link fa-2x"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </article>
        }
    </div>


    <div class="col-lg-12 text-center">
        <a href="/Article/SieuThiWeb" class="btn btn-mini">Xem thêm</a>
    </div>
</div>
