@model TNVTH.Web.Models.T_UserProfile

@{
    ViewBag.Title = "Xóa";
}

@section header {
    <h1>

        <span>Người dùng</span>

        <small>Xóa</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Bạn có chắc chắn muốn xóa ? </h3>
            </div><!-- /.box-header -->
            @Html.ValidationSummary()
            <div class="box-body">
                <div class="form-group">
                    <label>Username</label>
                    @Html.DisplayFor(m => m.UserName, new { @class = "form-control" })
                </div>
               
                <div class="form-group">
                    <label>Họ và tên</label>
                    @Html.DisplayFor(m => m.Fullname, new { @class = "form-control" })
                </div>
                
            </div><!-- /.box-body -->
            <!-- form start -->
            @using (Html.BeginForm("Delete", "UserManager", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UserId)

                <div class="box-footer">
                    <a class="btn btn-primary" onclick="history.go(-1); return false;" href="#">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Xóa</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->
