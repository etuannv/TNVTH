@using MvcPaging;
@model IPagedList<TNVTH.Web.Models.T_Adver>

@{
    ViewBag.Title = "Quảng cáo";
}

@section header {
    <h1>
        Quảng cáo
        <small>Danh sách</small>
    </h1>
}


<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="box-body">
                <div role="grid" class="dataTables_wrapper form-inline" id="example1_wrapper">
                    <div class="row">
                        <div class="row-left">
                            <div id="example1_length" class="dataTables_length">
                                <label>
                                    @Html.ActionLink(
                                            "Thêm mới",
                                            "AddNew",
                                            "Adver",
                                            new { @class = "btn btn-block btn-primary" })
                                </label>
                            </div>
                        </div>
                        <div class="row-right">
                            <div class="dataTables_filter" id="example1_filter">
                                @using (Html.BeginForm("List", "Adver", FormMethod.Get))
                                {
                                    <label>
                                        <button type="submit" class="btn btn-block btn-primary">Tìm kiếm</button>
                                    </label>
                                    <label>
                                        @Html.TextBox("search", ViewData["search"] as string, new { @class = "form-control" })
                                    </label>
                                }
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped" id="example1" aria-describedby="example1_info">
                        <thead>
                            <tr role="row">
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Liên kết</th>
                                <th>Image</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Liên kết</th>
                                <th>Image</th>
                                <th>ID</th>
                            </tr>
                        </tfoot>
                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td>
                                        <strong>
                                            @Html.ActionLink(
                                            item.Title,
                                            "Edit",
                                            "Adver",
                                              new { @id = item.ID },
                                             new { @class = "" })
                                        </strong>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Link)</td>
                                    <td><a href='@Url.Action("Edit", "Adver", new { @id = item.ID })'><img src="@item.ImagePath" alt="Ảnh" style="max-height: 100px; max-width:200px;"></a> </td>
                                    <td width="5%">@Html.DisplayFor(modelItem => item.ID)</td>
                                    <td width="3%">@Html.ActionLink("Xóa", "Delete", new { id = item.ID })</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="row-left">

                        </div>
                        <div class="row-right">
                            <div class="dataTables_paginate paging_bootstrap">
                                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
                                    .DisplayTemplate("Bootstrap3Pagination")
                                    .MaxNrOfPages(14)
                                    .AlwaysAddFirstPageNumber()
                                    .SetPreviousPageText("← Trước")
                                    .SetNextPageText("→ Sau")
                                    .RouteValues(new { @taxonomy = ViewData["taxonomy"], @search = ViewData["search"] })
                                    )
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
