@model TNVBABY.Web.Areas.Admin.Models.SlideViewModel

@{
    ViewBag.Title = "Thêm mới";
}

@section header {
    <h1>
        <span>Slide</span>
        <small>Sửa</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Slide", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group focus">
                        <label>Tiêu đề</label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập Tiêu đề" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                    <div class="form-group focus">
                        <label>Nhóm</label>
                        @Html.DropDownListFor(m => m.GroupID, new SelectList(Model.SlideGroupList, "ID", "Title", 1), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Liên kết</label>
                        @Html.TextBoxFor(m => m.Link, new { @class = "form-control", placeholder = "Nhập Liên kết" })
                    </div>
                    <div class="form-group">
                        <label>Target</label>
                        <select id="Target" name="Target" class="form-control">
                            @foreach (TNVBABY.Web.Utilities.LinkTarGet item in Enum.GetValues(typeof(TNVBABY.Web.Utilities.LinkTarGet)))
                            {
                                if(Model.Target == item.ToString())
                                { 
                                    <option value="@item.ToString()" selected>@item.ToString()</option>
                                }
                                else
                                {  <option value="@item.ToString()">@item.ToString()</option>}
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Target)
                    </div>
                    <div class="form-group">
                        <label>Kích hoạt</label>
                        @Html.CheckBox("Enable", Model.Enable)
                    </div>
                    <div class="form-group">
                        <label>Ảnh</label>
                        @Html.HiddenFor(m => m.ImagePath)
                        <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                        <img src="@Model.ImagePath" alt="Ảnh">
                    </div>


                </div><!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink(
                                        "Quay lại",
                                        "List",
                                        "Slide",
                                            new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->
<script src="~/Content/themes/admin/dist/js/custome.js"></script>

<link href="@Url.Content("~/Content/themes/plugins/datepicker/datepicker3.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/themes/plugins/datepicker/bootstrap-datepicker.js")" type="text/javascript"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $(".datepicker").datepicker();
        //Date range picker with time picker
    });
</script>