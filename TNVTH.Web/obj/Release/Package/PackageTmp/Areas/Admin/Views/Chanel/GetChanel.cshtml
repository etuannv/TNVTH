@model TNVBABY.Web.Models.T_Chanel

@{
    ViewBag.Title = "Get Chanel by user";
}

@section header {
    <h1>
        <span>Chanel</span>
        <small>Get Chanel by user</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("GetChanelByUser", "Chanel", FormMethod.Post))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken()
                <div class="box-body">

                    <div class="form-group focus">
                        <label>Youtube Username</label>
                        @Html.TextBoxFor(m => m.ByUser, new { @class = "form-control", placeholder = "Nhập Youtube User Id" })
                        @Html.ValidationMessageFor(model => model.ByUser)
                    </div>

                </div><!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink(
                                        "Quay lại",
                                        "List",
                                        "Chanel",
                                            new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-primary">Get</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->