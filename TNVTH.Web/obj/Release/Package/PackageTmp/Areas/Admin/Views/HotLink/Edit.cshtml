@model TNVBABY.Web.Models.T_HotLink

@{
    ViewBag.Title = "Sửa";
}

@section header {
    <h1>
        <span>HotLink</span>
        <small>Thêm mới</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("EditPost", "HotLink", FormMethod.Post))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group focus">
                        @Html.HiddenFor(m => m.ID)
                        <label>Loại Hot Link</label>
                        <select id="Type" name="Type" class="form-control">
                            @foreach (TNVBABY.Web.Utilities.HotLinkType item in Enum.GetValues(typeof(TNVBABY.Web.Utilities.HotLinkType)))
                            {
                                if(Model.Type == item.ToString())
                                { 
                                    <option value="@item.ToString()" selected>@item.ToString()</option>
                                }
                                else
                                {  <option value="@item.ToString()">@item.ToString()</option>}
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Type)
                    </div>
                    <div class="form-group">
                        <label>Tiêu đề</label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập Tiêu đề" })
                    </div>
                    <div class="form-group">
                        <label>Link</label>
                        @Html.TextBoxFor(m => m.Link, new { @class = "form-control", placeholder = "Link" })
                    </div>
                    <div class="form-group">
                        <label>Target</label>
                        <select id="Target" name="Target" class="form-control">
                            @foreach (TNVBABY.Web.Utilities.LinkTarGet item in Enum.GetValues(typeof(TNVBABY.Web.Utilities.LinkTarGet)))
                            {
                                if(Model.Target == item.ToString())
                                { 
                                    <option value="@item.ToString()" selected>@item.ToString()</option>
                                }
                                else
                                {  <option value="@item.ToString()">@item.ToString()</option>}
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Target)
                    </div>
                    <div class="form-group">
                        <label>Enabled</label>
                        @Html.CheckBoxFor(m => m.Enabled, new { })
                    </div>

                </div><!-- /.box-body -->
                <div class="box-footer">
                    <a class="btn btn-primary" onclick="history.go(-1); return false;" href="#">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->