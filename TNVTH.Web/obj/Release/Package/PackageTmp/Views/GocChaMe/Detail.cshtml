@model TNVBABY.Web.Models.T_News
<div class="row">
    <!-- Article main content -->
    <article class="col-md-9 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:5px" />
        
        <h2>@Model.Title</h2>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Center1.ToString() })
        @Html.Raw(HttpUtility.HtmlDecode(Model.ContentNews.Replace(@"<hr />", "")))
        <br />
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Center2.ToString() })
        <div class="col-md-12" style="padding-left:0px; padding-top:0px; padding-bottom:10px; clear:left;">
            <div class="fb-like" data-href="@Request.Url.ToString()" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
            <div class="g-plusone" data-size="medium" data-href="@Request.Url.ToString()"></div>
            <div class="g-plus" data-action="share" data-annotation="bubble" data-href="@Request.Url.ToString()"></div>
        </div>
        <div>@Html.Action("GetTags", new { @id = Model.ID, @taxonomy = TNVBABY.Web.Utilities.Constants.TAXONOMY_TAG })</div>
        <div class="fb-comments" data-href="@Request.Url.ToString()" data-numposts="10" data-width="100%" data-colorscheme="light"></div>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Center3.ToString() })
    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-3 sidebar sidebar-left">
        <div class="row panel">
            <div class="row panel">
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Right1.ToString() })
                </div>
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.ForParent.ToString(), @limit = 10 })
                </div>
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Right1.ToString() })
                </div>
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    <h3>Chuyên mục</h3>
                    @Html.Action("GetArticleCategoryMenu")
                </div>
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Right3.ToString() })
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Bài khác</h3>
                @Html.Action("GetRelatedNews", "GocChaMe", new { newsId = Model.ID, @limit = 5 })
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_GocChaMe_Right4.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->

</div>