<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@Html.MvcSiteMap().SiteMapTitle()</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@Html.Raw(HttpUtility.HtmlDecode(@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Description))">
    <meta content="all" name="robots">
    @if (@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes.ContainsKey("keywords"))
    {
        <meta name="keywords" content="@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes["keywords"]">
    }
    <meta property="og:title" content="@Html.MvcSiteMap().SiteMapTitle()" />
    <meta property="og:site_name" content="Dành cho thiếu nhi" />
    <meta property="og:url" content="@HttpContext.Current.Request.Url.AbsoluteUri" />
    <meta property="og:description" content="@Html.Raw(HttpUtility.HtmlDecode(@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Description))" />
    <meta property="fb:app_id" content="672215042894811" />
    @if (@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes.ContainsKey("type"))
    {
        <meta name="og:type" content="@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes["type"]">
    }
    else
    {
        <meta name="og:type" content="website">
    }

    @if (@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes.ContainsKey("og:image"))
    {
        <meta property="og:image" content="@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes["og:image"]">
    }
    else
    {
        <meta property="og:image" content="http://danhchothieunhi/Content/themes/Kiddo/images/KidZoneLogo.jpg">
    }
    @if (@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes.ContainsKey("author"))
    {
        <meta name="author" content="@MvcSiteMapProvider.SiteMaps.Current.CurrentNode.Attributes["author"]">
    }
    else
    {
        <meta name="author" content="http://tuvantinhoc.vn">
    }
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    @Html.MvcSiteMap().MetaRobotsTag()
    @Html.MvcSiteMap().CanonicalTag()

    <link rel="favicon" href="/Content/themes/Kiddo/images/favicon.png">
    <link rel="stylesheet" href="/Content/themes/Kiddo/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/themes/Kiddo/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/themes/Kiddo/css/bootstrap-theme.css" media="screen">
    <link rel="stylesheet" href="/Content/themes/Kiddo/css/style.css">
    <link rel='stylesheet' id='camera-css' href='/Content/themes/Kiddo/css/camera.css' type='text/css' media='all'>
    <script type='text/javascript' src='/Content/themes/Kiddo/js/jquery.min.js'></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function adClick(id) {
            var clickurl = "/Home/AdvertismentClick/" + id;
            jQuery.ajax({
                url: clickurl,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'json'
            });
        }
    </script>

