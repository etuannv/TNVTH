<div class="row">
    <!-- Article main content -->
    <article class="col-md-9 maincontent">

        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Center1.ToString() })
        <h2><span>Xem Video</span></h2>
        @Html.Action("GetLastVideo", "Video", new { @limit = 8 })
        <hr />
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Center2.ToString() })
        <h2><span>Chơi Game</span></h2>
        @Html.Action("GetFavouriteGame", "Game", new { @limit = 8 })
