            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.Home.ToString(), @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Right2.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại video</h3>
                @Html.Action("GetVideoCategoryMenu", "Video", new { @limit = 10 })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Right3.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại Game</h3>
                @Html.Action("GetGameCategoryMenu", "Game", new { @limit = 10 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Right4.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại Tranh tô</h3>
                @Html.Action("GetCategoryMenu", "TranhTo", new { @limit = 10 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Home_Right5.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->

</div>
