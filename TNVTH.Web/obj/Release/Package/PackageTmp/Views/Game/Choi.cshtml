@model TNVBABY.Web.Models.T_Game
<div class="row">
    <!-- Article main content -->
    <article class="col-md-9 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:3px; margin-bottom:9px;" />
        <div class="row">
            <div class="col-lg-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center1 })
                <div class="embed-responsive embed-responsive-16by9" style="margin: 0 auto;">
                    <embed width="100%" height="100%" name="plugin" bgcolor="#ccc" allowfullscreen="true" src="@Model.Embed" type="application/x-shockwave-flash">
                    <!-- YouTube Embed - TechAirlines.com -->
                </div>
                <h3 style="color:#444; margin-top:13px;">@Model.Title</h3>
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center2 })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="fb-like" data-href="@Request.Url.ToString()" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
                <div class="g-plusone" data-size="medium" data-href="@Request.Url.ToString()"></div>
                <div class="g-plus" data-action="share" data-annotation="bubble" data-href="@Request.Url.ToString()"></div>
                <div class="fb-comments" data-href="@Request.Url.ToString()" data-numposts="5" data-width="100%" data-colorscheme="light"></div>
                    @Html.Action("GetRelatedGame", new { @limit=20})
            </div>
        </div>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center3 })

    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-3 sidebar sidebar-left">
        <div class="row panel">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right1.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.Game.ToString(), @limit = 20 })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right2.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại Game</h3>
                @Html.Action("GetGameCategoryMenu", new { @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right3.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->

</div>