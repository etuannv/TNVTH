@model TNVBABY.Web.Models.T_Picture
<link rel="stylesheet" href="/Content/plugins/lightbox-print/css/lightbox.css" type="text/css" media="screen" />

<div class="row">
    <!-- Article main content -->
    <article class="col-md-9 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:5px" />
        <h2>@Model.Title</h2>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_XemTranh_Center1.ToString() })
        @Html.Action("GetImageOfPicture", new { @Id = @Model.ID, @Slug = @Model.Slug })
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_XemTranh_Center2.ToString() })
        <div class="col-md-12" style="padding-left:0px; padding-top:0px; padding-bottom:10px; clear:left;">
            <div class="fb-like" data-href="@Request.Url.ToString()" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
            <div class="g-plusone" data-size="medium" data-href="@Request.Url.ToString()"></div>
            <div class="g-plus" data-action="share" data-annotation="bubble" data-href="@Request.Url.ToString()"></div>
        </div>
        <div>@Html.Action("GetTags", new { @id = Model.ID, @taxonomy = TNVBABY.Web.Utilities.Constants.TAXONOMY_TAG })</div>
        <div class="fb-comments" data-href="@Request.Url.ToString()" data-numposts="3" data-width="100%" data-colorscheme="light"></div>
        @Html.Action("GetRelatedPicture", new { @Id = Model.ID, @limit=12 })
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_XemTranh_Center3.ToString() })
    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-3 sidebar sidebar-left">
        <div class="row panel">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right1.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.Picture.ToString(), @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right2.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại tranh tô</h3>
                @Html.Action("GetCategoryMenu", new { @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right3.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Dành cho</h3>
                <p>@Html.ActionLink("Bé trai", "DanhCho", new { @gender = @TNVBABY.Web.Utilities.Constants.GENDER_MALE.ToString() })</p>
                <p>
                    @Html.ActionLink("Bé gái", "DanhCho", new { @gender = @TNVBABY.Web.Utilities.Constants.GENDER_FEMALE.ToString() })
                </p>

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right4.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->
</div>

<script src="/Content/plugins/lightbox-print/js/lightbox.js" type="text/javascript"></script>