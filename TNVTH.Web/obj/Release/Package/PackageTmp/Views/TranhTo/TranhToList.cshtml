@model IEnumerable<TNVBABY.Web.Models.T_Picture>
<link rel="stylesheet" href="/Content/plugins/lightbox-print/css/lightbox.css" type="text/css" media="screen" />

<div class="row">

    <!-- Article main content -->
    <article class="col-md-9 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:5px" />
        <ul class="list-unstyled video-list-thumbs row">
            @foreach (var item in Model)
            {
                <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <a title="@item.Title" href="/TranhTo/XemTranh/@item.ID/@item.Slug">
                        @if(string.IsNullOrEmpty(@item.ThumbUrl))
                        {
                            <img style="width: 100%; max-height:285px;" class="img-responsive" src="@Html.Action("GetOneImageOfPicture", new {Id=item.ID})">
                        }
                        else
                        {
                            <img style="width:100%" class="img-responsive" src="@item.ThumbUrl">
                        }
                        <h3 style="min-height:55px;">@TNVBABY.Web.Utilities.Common.GetDescriptionByChar(@item.Title, 40)</h3>
                        <span class="view-count">@item.ViewCount lượt tải</span>
                    </a>
                </li>
            }
        </ul>

    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-3 sidebar sidebar-left">
        <div class="row panel">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right1.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.Picture.ToString(), @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right2.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Loại tranh tô</h3>
                @Html.Action("GetCategoryMenu", new { @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right3.ToString() })
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                <h3>Dành cho</h3>
                <p>@Html.ActionLink("Bé trai", "DanhCho", new { @gender = @TNVBABY.Web.Utilities.Constants.GENDER_MALE.ToString() })</p>
                <p>
                    @Html.ActionLink("Bé gái", "DanhCho", new { @gender = @TNVBABY.Web.Utilities.Constants.GENDER_FEMALE.ToString() })
                </p>

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_TranhTo_Right4.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->
</div>
<script src="/Content/plugins/lightbox-print/js/lightbox.js" type="text/javascript"></script>