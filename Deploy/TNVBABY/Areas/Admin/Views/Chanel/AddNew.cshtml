@model TNVBABY.Web.Models.T_Chanel

@{
    ViewBag.Title = "Thêm mới";
}

@section header {
    <h1>
        <span>Chanel</span>
        <small>Thêm mới</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("AddNew", "Chanel", FormMethod.Post))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken()
                <div class="box-body">
                    
                    <div class="form-group focus">
                        <label>Youtube Chanel ID</label>
                        @Html.TextBoxFor(m => m.UChanelID, new { @class = "form-control", placeholder = "Nhập Youtube Chanel ID" })
                        @Html.ValidationMessageFor(model => model.UChanelID)
                    </div>

                    <div class="form-group">
                        <label>Tên hiển thị</label>
                        @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Nhập tên hiển thị" })
                    </div>
                    <div class="form-group">
                        <label>Kích hoạt</label>
                        @Html.CheckBox("Enable", true)
                    </div>

                </div><!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink(
                                        "Quay lại",
                                        "List",
                                        "Chanel",
                                            new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->