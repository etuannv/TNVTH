@model TNVBABY.Web.Models.T_Album

@{
    ViewBag.Title = "Sửa";
}


@section header {
    <h1>
        <span>Album</span>
        <small>Sửa</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group focus">
                        <label>Tiêu đề</label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập Tiêu đề" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Nhập Mô tả" })
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink(
                                        "Quay lại",
                                        "List",
                                        "Album",
                                            new { @class = "btn btn-primary" })
                    @Html.ActionLink("Thêm ảnh", "UploadImage", new { @id = Model.ID }, new { @class = "btn btn-Danger" })
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    
                </div>
            }

            @Html.Action("GetAlbumImage", "Album", new { id = @Model.ID })
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->