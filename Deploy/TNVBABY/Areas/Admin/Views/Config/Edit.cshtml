@model TNVBABY.Web.Models.T_Config

@{
    ViewBag.Title = "Cấu hình";
}

@section header {
    <h1>
        <span>Cấu hình</span>
        <small>Sửa</small>
    </h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Config", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group focus">
                        <label>Mô tả</label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập Mô tả" })
                    </div>
                    <div class="form-group">
                        <label>Key</label>
                        <select id="Key" name="Key" class="form-control">
                            @foreach (TNVBABY.Web.Utilities.Config item in Enum.GetValues(typeof(TNVBABY.Web.Utilities.Config)))
                            {
                                if(Model.Key == @item.ToString())
                                { 
                                    <option selected value="@item.ToString()">@item.ToString()</option>
                                }
                                else
                                {
                                    <option value="@item.ToString()">@item.ToString()</option>
                                }
                            }
                        </select>

                        @Html.ValidationMessageFor(model => model.Key)
                    </div>
                    <div class="form-group">
                        <label>Value</label>
                        @Html.TextBoxFor(m => m.Value, new { @class = "form-control", placeholder = "Nhập Value" })
                    </div>
                    

                </div><!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink(
                                        "Quay lại",
                                        "List",
                                        "Config",
                                            new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div><!-- /.box -->
        <!-- Form Element sizes -->
    </div><!--/.col (left) -->
</div>   <!-- /.row -->