@model IEnumerable<TNVBABY.Web.Models.T_Game>

    <ul class="list-unstyled video-list-thumbs row">
        @foreach (var item in Model)
        {
            <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <a title="@item.Title" href="/Game/Choi/@item.ID/@item.Slug">
                    <img style="width: 100%; max-height:285px;" class="img-responsive" src="@item.ThumbUrl">
                    <h3>@TNVBABY.Web.Utilities.Common.GetDescriptionByChar(@item.Title, 48)</h3>
                    <span class="game-play-button"></span>
                    <span class="view-count">@item.ViewCount lượt chơi</span>
                </a>
            </li>
        }
    </ul>

