<div class="row">
    <!-- Article main content -->
    <article class="col-md-10 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:5px" />

        @Html.Action("GetAdvertisment", "Home",  new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center1.ToString() })
        <h2>Mới nhất</h2>
        @Html.Action("GetLastGame", new { @limit = 8 })
        <hr/>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center2.ToString() })
        <h2>Yêu thích nhất</h2>
        @Html.Action("GetFavouriteGame", new { @limit = 8 })
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Center3.ToString() })
    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-2 sidebar sidebar-left">
        <div class="row panel">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right1.ToString() })
                <h3>Có gì HOT </h3>
                @Html.Action("GetHotLinkRight", "Home", new {@type = TNVBABY.Web.Utilities.HotLinkType.Game.ToString() , @limit=20})
            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right2.ToString() })
                <h3>Loại Game</h3>
                @Html.Action("GetGameCategoryMenu")
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Game_Right3.ToString() })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->

</div>