@model IEnumerable<TNVBABY.Web.Models.T_Video>

<div class="row">

    <!-- Article main content -->
    <article class="col-md-10 maincontent">
        @Html.MvcSiteMap().SiteMapPath()
        <hr style="margin-top:5px" />
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Video_Center1 })
        <ul class="list-unstyled video-list-thumbs row">
            @foreach (var item in Model)
            {
                <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <a title="@item.Title" href="/Video/Xem/@item.ID/@item.Slug">
                        <img style="width: 100%; max-height:285px;" class="img-responsive" src="@item.UThumbnail">
                        <h3>@TNVBABY.Web.Utilities.Common.GetDescriptionByChar(@item.Title, 48)</h3>
                        @if (!@item.IsPlaylist)
                        {
                            <span class="play-button"></span>
                            <span class="duration">@TNVBABY.Web.Utilities.Common.GetYoutubeDurationString(@item.UDuration)</span>
                        }
                        else
                        {
                            <span class="playlist-button"></span>
                        }
                        <span class="view-count">@item.ViewCount lượt xem</span>
                    </a>
                </li>
            }
        </ul>
        @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Video_Center2 })
    </article>
    <!-- /Article -->
    <!-- Sidebar -->
    <aside class="col-md-2 sidebar sidebar-left">
        <div class="row panel">
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Video_Right2 })
                <h3>Có gì HOT</h3>
                @Html.Action("GetHotLinkRight", "Home", new { @type = TNVBABY.Web.Utilities.HotLinkType.Video.ToString(), @limit = 20 })

            </div>
            <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Video_Right2 })
                <h3>Loại Video</h3>
                @Html.Action("GetVideoCategoryMenu")
                @Html.Action("GetAdvertisment", "Home", new { @positionKey = @TNVBABY.Web.Utilities.Config.Ad_Video_Right3 })
            </div>
        </div>
    </aside>
    <!-- /Sidebar -->
</div>