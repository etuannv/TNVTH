@using MvcPaging;
@model IPagedList<string>

<link rel="stylesheet" href="/Content/themes/hoaan/scripts/prettyphoto/css/prettyPhoto.css" type="text/css" media="screen" title="prettyPhoto main stylesheet" charset="utf-8" />
<script src="/Content/themes/hoaan/scripts/prettyphoto/js/jquery.prettyPhoto.js" type="text/javascript" charset="utf-8"></script>

<style type="text/css">

    .pt-img-box ul
    {
        margin:0;
        padding: 0
    }
    .pt-img-box ul li {
        display: inline;
        margin-right: 8px;
        line-height:100px;
    }

    .image-album {
        width: 144px;
        height: 81px;
    }
</style>

<div class="divPanel notop page-content">

    <div class="breadcrumbs">
        @Html.MvcSiteMap().SiteMapPath()
    </div>

    <div class="row-fluid">
        <div class="span12">
            <h1>Album @ViewBag.Title</h1>
            <hr />
            <div class="pt-img-box">
                <ul class="gallery clearfix">
                    @foreach (var item in Model)
                    {

                        <li>
                            <a href="@item" rel="prettyPhoto[gallery2]" title="@TNVBABY.Web.Utilities.Common.GetFileNameReal(item)">
                                <img class="image-album" src="@item" alt="@TNVBABY.Web.Utilities.Common.GetFileNameReal(item)" />
                            </a>
                        </li>

                    }
                </ul>
            </div>

            <div class="row-fluid">
                <div class="dataTables_paginate paging_bootstrap" style="float:right">
                    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
                                    .DisplayTemplate("Bootstrap3Pagination")
                                    .MaxNrOfPages(14)
                                    .AlwaysAddFirstPageNumber()
                                    .SetPreviousPageText("← Trước")
                                    .SetNextPageText("→ Sau")
                                             .RouteValues(new { })
                                    )
                </div>
            </div>
        </div>

    </div>
    <div id="footerInnerSeparator"></div>
</div>


<script type="text/javascript" charset="utf-8">

    $("area[rel^='prettyPhoto']").prettyPhoto();

    $(".gallery:first a[rel^='prettyPhoto']").prettyPhoto({ animation_speed: 'normal', theme: 'light_square', slideshow: 3000, autoplay_slideshow: true });
    $(".gallery:gt(0) a[rel^='prettyPhoto']").prettyPhoto({ animation_speed: 'fast', slideshow: 10000, hideflash: true });

    $("#custom_content a[rel^='prettyPhoto']:first").prettyPhoto({
        custom_markup: '<div id="map_canvas" style="width:260px; height:265px"></div>',
        changepicturecallback: function () { initialize(); }
    });

    $("#custom_content a[rel^='prettyPhoto']:last").prettyPhoto({
        custom_markup: '<div id="bsap_1259344" class="bsarocks bsap_d49a0984d0f377271ccbf01a33f2b6d6"></div><div id="bsap_1237859" class="bsarocks bsap_d49a0984d0f377271ccbf01a33f2b6d6" style="height:260px"></div><div id="bsap_1251710" class="bsarocks bsap_d49a0984d0f377271ccbf01a33f2b6d6"></div>',
        changepicturecallback: function () { _bsap.exec(); }
    });
</script>